{
  "name": "@spec-kit/core",
  "type": "module",
  "version": "0.1.0",
  "description": "Core utilities and shared functionality for Spec-Kit SDK",
  "license": "MIT",
  "homepage": "https://github.com/amondnet/spec-kit-sdk#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amondnet/spec-kit-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/amondnet/spec-kit-sdk/issues"
  },
  "keywords": [
    "spec-kit",
    "sdd",
    "spec-driven-development",
    "core",
    "utilities",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "bun run build:clean && bun run build:types && bun run build:bundle",
    "build:clean": "rm -rf ./dist",
    "build:types": "tsc --emitDeclarationOnly --project tsconfig.types.json --outDir ./dist",
    "build:bundle": "bun build ./src/index.ts ./src/config/index.ts --target=bun --outdir=./dist",
    "dev": "bun build ./src/ --target=bun --outdir=./dist --splitting --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "postbuild": "rimraf tsconfig.types.tsbuildinfo"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@types/bun": "^1.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "eslint": "^9.35.0",
    "eslint-plugin-format": "^1.0.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0"
  }
}
