{
  "name": "@spec-kit/cli",
  "type": "module",
  "version": "0.1.0",
  "description": "Spec-Kit CLI - Setup tool for Spec-Driven Development projects",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spec-kit/spec-kit-sdk.git"
  },
  "homepage": "https://github.com/spec-kit/spec-kit-sdk#readme",
  "bugs": {
    "url": "https://github.com/spec-kit/spec-kit-sdk/issues"
  },
  "keywords": [
    "spec-kit",
    "sdd",
    "spec-driven-development",
    "cli",
    "typescript",
    "bun"
  ],
  "bin": {
    "specify": "./dist/specify"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --compile --outfile=./dist/specify",
    "build:bun":  "bun build ./src/index.ts --target=bun --outdir=./dist --splitting",
    "build:windows": "bun build ./src/index.ts --compile --target=bun-windows-x64 --outfile=./dist/specify-win.exe",
    "build:mac": "bun build ./src/index.ts --compile --target=bun-darwin-arm64 --outfile=./dist/specify-mac",
    "build:linux": "bun build ./src/index.ts --compile --target=bun-linux-x64 --outfile=./dist/specify-linux",
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@inquirer/prompts": "^5.3.2",
    "adm-zip": "^0.5.10",
    "cli-spinners": "^3.0.0",
    "commander": "^14.0.1",
    "picocolors": "^1.0.0",
    "simple-git": "^3.20.0",
    "strip-ansi": "^7.1.2"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/node": "^20.0.0",
    "@types/adm-zip": "^0.5.5",
    "@antfu/eslint-config": "^5.3.0",
    "eslint": "^9.35.0",
    "eslint-plugin-format": "^1.0.1",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}