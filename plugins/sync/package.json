{
  "name": "@spec-kit/plugin-sync",
  "type": "module",
  "version": "0.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "specify-sync": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build ./src/cli.ts --compile --outfile ./dist/cli ",
    "dev": "bun build ./src/cli.ts --compile --outfile ./dist/cli --watch",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "specify-sync": "bun run dist/cli.js"
  },
  "dependencies": {
    "@spec-kit/core": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "gray-matter": "^4.0.3",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.3"
  }
}
