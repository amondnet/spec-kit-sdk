{
  "permissions": {
    "allow": [
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh api:*)",
      "WebFetch",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "Bash(bun install:*)",
      "Bash(bun test:*)",
      "Bash(bun run:*)",
      "Bash(tree:*)",
      "Bash(tsc --noEmit --skipLibCheck)",
      "Bash(npx tsc:*)",
      "Bash(turbo lint:*)",
      "Bash(turbo build:*)",
      "Bash(.specify/scripts/bash/create-new-feature.sh:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "mcp__claude-context__index_codebase",
      "mcp__claude-context__get_indexing_status",
      "mcp__claude-context__search_code",
      "mcp__ast-grep__find_code",
      "mcp__ast-grep__find_code_by_rule",
      "Bash(git remote get-url:*)",
      "WebSearch",
      "Bash(npm search:*)",
      "Bash(npm view:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if echo \"$file_path\" | grep -q '\\.ts$'; then bunx eslint --fix \"$file_path\" || true; fi; }"
          }
        ]
      }
    ]
  }
}